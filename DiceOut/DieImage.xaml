<UserControl
    x:Class="DiceOut.DieImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DiceOut"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="150">

  <Grid>
    <Canvas Width="100" Height="100" Margin="10">
      <Image x:Name="Face1" Width="100" Height="100" Source="Assets/dice_1.jpg" Visibility="Visible"></Image>
      <Image x:Name="Face2" Width="100" Height="100" Source="Assets/dice_2.jpg" Visibility="Collapsed"></Image>
      <Image x:Name="Face3" Width="100" Height="100" Source="Assets/dice_3.jpg" Visibility="Collapsed"></Image>
      <Image x:Name="Face4" Width="100" Height="100" Source="Assets/dice_4.jpg" Visibility="Collapsed"></Image>
      <Image x:Name="Face5" Width="100" Height="100" Source="Assets/dice_5.jpg" Visibility="Collapsed"></Image>
      <Image x:Name="Face6" Width="100" Height="100" Source="Assets/dice_6.jpg" Visibility="Collapsed"></Image>
      <Image x:Name="Spin" Width="100" Height="100" Source="Assets/Spin.gif" Visibility="Collapsed"></Image>
    </Canvas>
  </Grid>
</UserControl>
